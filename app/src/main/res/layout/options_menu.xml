<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical|center_horizontal"
    android:id="@+id/options_layout2">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@android:drawable/alert_dark_frame"
        android:padding="30dp"
        android:id="@+id/options_layout">

        <Button
            android:text="@string/menu_open"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/local_button"
            android:layout_weight="1"
            android:layout_margin="10dp"
            style="@android:style/Widget.Button.Inset"
            android:padding="20dp" />

        <Button
            android:text="@string/menu_useblue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/blue_button"
            android:layout_weight="1"
            android:layout_margin="10dp"
            style="@android:style/Widget.Button.Inset"
            android:padding="20dp" />
    </LinearLayout>

    <Button
        android:text=" "
        android:id="@+id/close_button"
        style="@android:style/Widget.Button"
        android:textStyle="normal|bold"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentRight="false"
        android:layout_alignRight="@+id/options_layout"
        android:background="@android:drawable/presence_offline" />
</RelativeLayout>