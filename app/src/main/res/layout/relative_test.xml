<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical|center_horizontal"
    android:id="@+id/blue_devices_main">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@android:drawable/alert_light_frame"
        android:id="@+id/window">

        <TextView
            android:text="@string/devices_title"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:textAppearance="@android:style/TextAppearance"
            android:textStyle="normal|bold"
            android:id="@+id/blue_devices_title" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:id="@+id/blue_devices_scroll"
            android:layout_weight="1"
            android:scrollbarStyle="insideOverlay">

            <TextView
                android:text=" "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/blue_devices"
                android:textAppearance="@android:style/TextAppearance" />
        </ScrollView>

        <TextView
            android:text="@string/status_searching"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/statusView"
            android:textAppearance="@android:style/TextAppearance"
            android:padding="5dp" />
    </LinearLayout>

    <Button
        android:text=" "
        android:id="@+id/close_button_disc"
        style="@android:style/Widget.Button"
        android:textStyle="normal|bold"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentRight="false"
        android:layout_alignRight="@+id/window"
        android:background="@android:drawable/presence_offline" />
</RelativeLayout>